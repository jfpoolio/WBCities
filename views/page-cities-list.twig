{% extends "base.twig" %}

{% block content %}
	<div class="content-wrapper">
		<article class="post-type-{{post.post_type}}" id="post-{{post.ID}}">
			<section class="article-content">
				<h1 class="article-h1">{{post.title}}</h1>
				<div class="article-body">
					{{post.content}}

					{% for post in cities %}
					  <a href="{{ post.link }}">
							<h2>{{ post.title }}</h2>
							{% if post.thumbnail %}
								<img width="30%" src="{{post.get_thumbnail.src('medium_large')}}" alt="{{post.title}}" />
							{% endif %}
						</a>  
					{% endfor %}

				</div>				
			</section>
		</article>
	</div><!-- /content-wrapper -->
{% endblock %}